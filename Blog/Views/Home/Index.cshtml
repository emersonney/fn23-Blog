@model IList<Post>
<div>

    @if (@ViewBag.Mensagem != null)
    {
        <h3>Foi realizado uma busca por "@ViewBag.Mensagem"</h3>
    }

    @if (Model.Count == 0)
    {
        <article><p> Não existem resultados para o termo pesquisado! </p></article>
    }
    else
    {

        @foreach (var p in Model)
        {
            <article>
                <h1>@p.Titulo</h1>
                <p>@p.Resumo</p>
            </article>
        }

    }

</div>