<html>

<head>
</head>

<body>

    <table border="1" cellpadding="2" cellspacing="2">
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicado</th>
                <th colspan="2">Ações</th>
            </tr>
        </thead>
        <tbody>
            @model List<Blog.Models.Post>

            @foreach (var p in Model)
            {
            <tr>
                <td><a href="/Post/Visualiza/@p.Id">@p.Titulo</a></td>
                <td>@p.Resumo</td>
                <td>@p.Categoria</td>
                <td>
                    @if(p.Publicado)
                    {
                        @Html.Raw(string.Format("{0:dd/MM/yyyy}",p.DataPublicao))
                    }
                    else
                    {
                        @Html.Raw("Não");
                    }
                </td>
                <td><a href="/Post/RemovePost/@p.Id">Remover</a></td>
                <td><a href="/Post/PublicaPost/@p.Id">Publicar</a></td>
            </tr>
            }
        </tbody>
    </table>
</body>

</html>