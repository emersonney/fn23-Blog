<html>

<head>
</head>

<body>

    <table border="1" cellpadding="2" cellspacing="2">
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @model List<Blog.Models.Post>

            @foreach (var p in Model)
            {
                <tr>
                    <td>@p.Titulo</td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                    <td><a href="/Post/RemovePost/@p.Id">Remover</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>

</html>