@model  Login;
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Resenha Cultural - Login</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" type="text/css" />
    <link rel="stylesheet" href="~/css/estilo.css" type="text/css" />
</head>
<body>
    <div class="container clearfix align-middle">
        <main id="login-form">
            <h2>Resenha Cultural - Login</h2>
            <form asp-action="Autentica" asp-route-returnurl="@ViewBag.ReturnUrl" method="post" role="form" class="form-horizontal">
                <label asp-for="LoginName"></label>
                <input asp-for="LoginName" class="form-control" />

                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" class="form-control" />

                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </main>
    </div>
</body>
</html>