@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Blog.Models.Post

<input type="hidden" asp-for="Id" value="@Model.Id" />
<input type="hidden" asp-for="Publicado" value="@Model.Publicado.ToString()" />
<input type="hidden" asp-for="DataPublicao" value="@Model.DataPublicao" />

<label asp-for="Titulo"></label>
<input asp-for="Titulo"/>
<span asp-validation-for="Titulo"></span>

<label asp-for="Resumo"></label>
<input asp-for="Resumo" />
<span asp-validation-for="Resumo"></span>

<label asp-for="Categoria"></label>
<input asp-for="Categoria" />
<span asp-validation-for="Categoria"></span>