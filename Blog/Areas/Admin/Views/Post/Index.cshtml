@model IList<Post>

    <h2>Lista de Posts</h2>

    <a class="btn btn-primary btn-sm" role="button" asp-action="Adiciona">Incluir Post</a>

    <table class="table table-striped table-hover table-bordered">
        <caption>Lista dos posts cadastrados no blog.</caption>
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicado?</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Visualiza" asp-route-id="@p.Id">@p.Titulo</a>
                    </td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                    <td>
                        @if (p.Publicado)
                        {
                            @Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicao))
                        }
                        else
                        {
                            @Html.Raw("Não");
                        }
                    </td>

                    <td width="170px">
                        <div class="btn-group-toggle" data-toggle="buttons">
                            <a class="btn btn-success btn-sm" role="button" asp-action="PublicaPost" asp-route-id="@p.Id">Publicar</a>
                            <a class="btn btn-danger btn-sm" role="button" asp-action="RemovePost" asp-route-id="@p.Id">Remover</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

