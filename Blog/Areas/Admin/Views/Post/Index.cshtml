@model IList<Post>
<div>
    <h2>Lista de Posts</h2>
    @Html.ActionLink("Incluir Post", "Adiciona")

    <table cellpadding="2" cellspacing="2">
        <thead>
            <tr>
                <th>Título</th>
                <th>Resumo</th>
                <th>Categoria</th>
                <th>Publicado?</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var p in Model)
            {
                <tr>
                    <td>
                        <a href="/Admin/Post/Visualiza/@p.Id">@p.Titulo</a>
                        @*@Html.ActionLink(p.Titulo, "Visualiza", new { id = p.Id })*@
                    </td>
                    <td>@p.Resumo</td>
                    <td>@p.Categoria</td>
                    <td>
                        @if (p.Publicado)
                        {
                            @Html.Raw(string.Format("{0:dd/MM/yyyy}", p.DataPublicao))
                        }
                        else
                        {
                            @Html.Raw("Não");
                        }
                    </td>

                    <td>
                        <a href="/Admin/Post/RemovePost/@p.Id">Remover</a>
                        <a href="/Admin/Post/PublicaPost/@p.Id">Publicar</a>

                        @*@Html.ActionLink("Remover", "RemovePost", new { id = p.Id })
                            @Html.ActionLink("Publicar", "PublicaPost", new { id = p.Id })*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
